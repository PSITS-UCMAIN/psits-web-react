{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "allowJs": false, // lets JS and TS live together
    "checkJs": false, // can flip to true later
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src", "types"]
}
